@page "/flight-board"
@inject FlightHubService FlightHub

<h3>Flight Status Board</h3>

@if (updates == null)
{
    <p><em>Waiting for updates...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Flight Number</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var flight in updates)
            {
                <tr>
                    <td>@flight.FlightNumber</td>
                    <td>@flight.Status</td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<FlightStatusUpdateDto>? updates;

    protected override async Task OnInitializedAsync()
    {
        FlightHub.OnFlightStatusUpdate += list =>
        {
            updates = list;
            InvokeAsync(StateHasChanged);
        };

        await FlightHub.StartAsync();
    }
}
